<div class="row">
  <div class="col-md-12">
    <h1>Companies</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= link_to "Add Company", new_company_path %>
    <hr />

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th># Of Employees</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td><%= company.id %></td>
          <td><%= company.name %></td>
          <td><%= company.employees.count %></td>
          <td><%= link_to "Add Employee", new_company_employee_path(company) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
